@model TechnicalTestFE.Models.Book

@{
    ViewData["Title"] = "Edit";
}


<br />
<br />
<h3 class="text-center"> Editar Libro</h3>
<br />

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>@TempData["Message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form method="post" asp-action="Create">
    <input type="hidden" asp-for="BookId" />
    <div class="row px-2 py-4 mx-2 my-4 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-3">

            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Title" class="control-label">Título</label>
                </div>
                <div class="col-8">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Year" class="control-label">Año</label>
                </div>
                <div class="col-8">
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Genre" class="control-label">Género</label>
                </div>
                <div class="col-8">
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Pages" class="control-label">No. de Páginas</label>
                </div>
                <div class="col-8">
                    <input asp-for="Pages" class="form-control" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Author" class="control-label">Autor</label>
                </div>
                <div class="col-8">
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" asp-route-id="@Model.BookId" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
